{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": { "*": ["*", "/*"] },
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2021"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "target": "es5"
  }
}
